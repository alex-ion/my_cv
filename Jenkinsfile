pipeline{
  
  agent any
  
  stages{
    
    stage("build"){
      
      steps{
        echo 'building the application...'
        echo 'application built3'
      }
      
    }
    
    stage("test"){
      
      steps{
        echo 'testing the application...'
      }
      
    }
    
    stage("deploy"){
      
      steps{
        echo 'deploying the application...'
      }
      
    }    
    
  }
  
}
